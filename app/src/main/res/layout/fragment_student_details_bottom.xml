<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".StudentDetailsBottomFragment">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/numberOfLessonsTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Lessons"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView" />

    <TextView
        android:id="@+id/numberLessonsTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="43dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toEndOf="@+id/numberOfLessonsTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfPackages"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Packages"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfLessonsTextView" />

    <TextView
        android:id="@+id/numberPackagesTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toEndOf="@+id/numberOfPackages"
        app:layout_constraintTop_toBottomOf="@+id/numberLessonsTextView" />

    <TextView
        android:id="@+id/numberOfTests"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Driving Tests"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPackages" />

    <TextView
        android:id="@+id/numberTestsTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F00099BF"
        app:layout_constraintStart_toEndOf="@+id/numberOfTests"
        app:layout_constraintTop_toBottomOf="@+id/numberPackagesTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>



