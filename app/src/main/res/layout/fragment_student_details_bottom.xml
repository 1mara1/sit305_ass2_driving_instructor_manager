<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".StudentDetailsBottomFragment">


    <TextView
        android:id="@+id/numberOfLessonsTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Lessons"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#00BFA5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/lessonListForStudentImageButton"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FF6E40"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintStart_toEndOf="@+id/numberOfLessonsTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberOfPackages"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Packages"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#00BFA5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfLessonsTextView" />

    <ImageButton
        android:id="@+id/packageListForStudentImageButton"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:background="#FF6E40"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintStart_toEndOf="@+id/numberOfPackages"
        app:layout_constraintTop_toBottomOf="@+id/lessonListForStudentImageButton" />

    <TextView
        android:id="@+id/numberOfTests"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Driving Tests"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#00BFA5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfPackages" />

    <ImageButton
        android:id="@+id/testsListForStudentImageButton"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="13dp"
        android:layout_weight="1"
        android:background="#FF6E40"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintStart_toEndOf="@+id/numberOfTests"
        app:layout_constraintTop_toBottomOf="@+id/packageListForStudentImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>



